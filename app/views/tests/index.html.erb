<div class="container-fluid">

  <h1 class="text-center">Tests pour toute la Belgique</h1>

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-sm-12 col-lg-4">
      <table class="table table-striped table-hover">
        <tr>
          <th>Date</th>
          <th>Total</th>
          <th>Positifs</th>
          <th>Pourcentage de positifs</th>
        </tr>

        <% @positive_by_date.reverse_each do |date, t| %>
          <tr>
            <td><%= date.strftime("%d-%m-%Y") %></td>
            <td><%= t[:total] %></td>
            <td><%= t[:pos] %></td>
            <td><%= (t[:pos] *100.0  / t[:total]).round(2) %>%</td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-lg4"></div>
  </div>
</div>
